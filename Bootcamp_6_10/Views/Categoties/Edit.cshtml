@model Categoty
@{
    ViewData["Title"] = "Edit";
}

<h1>Update Category</h1>
<form asp-action="Edit" method="post">
    <div class="mb-3">
         <lable for="Name">Name : </lable>
        <input type="text" asp-for="Name"  class="form-control" id="Name" name="Name" placeholder="Enter Your Name"  />
    </div>
    <div class="mb-3">
         <lable for="Description">Description : </lable>
         <textarea id="Description" asp-for="Description" class="form-control"  name="Description" placeholder="Enter what you want" ></textarea>
     </div>
    <button type="submit" class="btn btn-primary"> Update </button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>

