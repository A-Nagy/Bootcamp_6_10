@model Employee
@{
    ViewData["Title"] = "Edit";
}

<h1>Update Employee</h1>
<form asp-action="Edit" method="post">
    <div class="mb-3">
         <label for="Name">Name : </label>
        <input type="text" asp-for="Name"  class="form-control" id="Name" name="Name" placeholder="Enter Employee Name"  />
    </div>

        <div class="mb-3">
         <label for="Email">Email : </label>
        <input type="email" asp-for="Email"  class="form-control" id="Email" name="Email" placeholder="Enter Employee Email"  />
    </div>

        <div class="mb-3">
         <label for="Phone">Phone : </label>
        <input type="tel" asp-for="Phone"  class="form-control" id="Phone" name="Phone" placeholder="Enter Employee Phone"  />
    </div>

        <div class="mb-3">
         <label for="City">City : </label>
        <input type="text" asp-for="City"  class="form-control" id="City" name="City" placeholder="Enter Employee City"  />
    </div>
        <div class="mb-3">
         <label for="Address">Address : </label>
        <input type="text" asp-for="Address"  class="form-control" id="Address" name="Address" placeholder="Enter Employee Address"  />
    </div>
    
    <button type="submit" class="btn btn-primary"> Update </button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>

 