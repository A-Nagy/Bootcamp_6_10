@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

<h1>Employees</h1>

 
 
<partial name="_NotificationsPartial" />

<div class = "mb-3">
    <a asp-action="Create" class="btn btn-primary">Add Employee</a>
</div>

<table class="table table-dark table-border">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>City</th>
            <th>Address</th>
             <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
         <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>@item.Phone</td>
            <td>@item.City</td>
            <td>@item.Address</td>
              <td>
                <a asp-action="Edit"   asp-route-id="@item.Id" class ="btn btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class ="btn btn-danger">Del</a>
            </td>
        </tr>
        }
    </tbody>
</table>

